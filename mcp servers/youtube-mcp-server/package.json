{
  "name": "youtube-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for YouTube integration",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_ENV=production node src/index.js",
    "dev": "NODE_ENV=development nodemon --watch src src/index.js",
    "test": "NODE_ENV=test jest",
    "test:agent": "NODE_ENV=test node youtube-agent-test.js",
    "lint": "eslint src/**/*.js",
    "build": "mkdir -p dist && cp -r src package.json .env-files dist/",
    "prepare-env:dev": "cp .env-files/development.env .env",
    "prepare-env:prod": "cp .env-files/production.env .env",
    "prepare-env:test": "cp .env-files/test.env .env"
  },
  "keywords": [
    "mcp",
    "youtube",
    "ai",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "axios-rate-limit": "^1.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "googleapis": "^126.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
